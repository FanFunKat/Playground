extends layput

block main
  section.namecard
    .namecard-login
      if name
        p.namecard-greeting Welcome, #{name}!
        form.namecard-exit(action='/goodbye', method='POST')
          button(type='submit')
            img(src'/static/img/close.png')
      else
        p.namecard-greeting Hello, student!
    block intro
  block card